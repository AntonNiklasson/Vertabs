{
	"manifest_version": 2,

	"name": "Vertabs",
	"version": "0.0.0",
	"description": "Vertical tabs for tab addicts.",
	
	"browser_action": {
		"default_icon": "imgs/icon.png"
	},

	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["vertabs-injector.js"],
			"css": ["vertabs.css"],
			"run_at": "document_end"
		}
	],

	"permissions": ["tabs"]
}