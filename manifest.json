{
	"name": "Vertabs",
	"version": "1.0.0",
	"description": "Vertical tabs for tab junkies.",

	"icons": {
		"16": "imgs/icon16.png",
		"48": "imgs/icon48.png",
		"128": "imgs/icon128.png"
	},

	"browser_action": {
		"default_icon": "imgs/icon_inactive.png",
		"default_title": "Toggle Vertabs"
	},

	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["vertabs-injector.js"],
			"css": ["vertabs.css"],
			"run_at": "document_end"
		}
	],

	"web_accessible_resources": [
		"imgs/close.png"
	],

	"permissions": ["tabs"],

	"manifest_version": 2
}